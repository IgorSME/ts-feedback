{
  "compilerOptions": {
  
    "target": "es6",            
    "module": "commonjs",      
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ],                       
    "outDir": "./dist",        
    "rootDir": "./src",         
    "removeComments": true,     
    "noEmitOnError": true,
    "strict": true,             
    "sourceMap": true,         
    "noUnusedLocals": true,    
    "noUnusedParameters": true, 
    "noImplicitReturns": true,  
    "esModuleInterop": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true    
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}